{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/.ruff_cache": true
    },
    "git.autoRepositoryDetection": true,
    "git.scanRepositories": [
        "src/community",
        "src/enterprise",
    ],
    "python.analysis.extraPaths": [
        "src/community",
        "src/extra-addons/runbot/mergebot_test_utils",
    ],
}
